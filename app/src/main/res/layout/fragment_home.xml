<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="home"
            type="com.example.challenge.fragments.HomeFragment" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.challenge.fragments.HomeFragment"
        android:layout_marginTop="24dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fbAddEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/pink"
            android:contentDescription="image"
            android:tintMode="@color/white"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_add" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rbHome"
            android:visibility="gone" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ivEmplyEmployeesImg"
            android:src="@drawable/ic_add_ind"
            android:contentDescription="No employees"
            android:layout_margin="100dp"
            android:visibility="gone" />

    </FrameLayout>
</layout>