<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="addEmployee"
            type="com.example.challenge.fragments.AddEmployeeFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragments.AddEmployeeFragment"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAddEmployeeHeader"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:text="Add Employee."
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="24sp" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:minWidth="64dp"
            tools:src="@tools:sample/avatars"
            android:background="@drawable/bg_profile"
            app:shapeAppearanceOverlay="@style/Circular"
            app:strokeColor="@color/pink"
            app:strokeWidth="2dp"
            android:padding="4dp" />

        <EditText
            android:id="@+id/etAddEmployee"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Full Name"
            android:padding="12dp"
            android:textSize="20sp"
            android:background="@drawable/pink_border"
            android:layout_marginTop="16dp"
            android:maxLines="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/etBornDate"
            android:hint="Date of birth"
            android:gravity="top"
            android:padding="12dp"
            android:textSize="20sp"
            android:background="@drawable/pink_border"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="date"
            android:focusable="false"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/etAvatar"
            android:hint="Avatar"
            android:gravity="top"
            android:padding="12dp"
            android:textSize="20sp"
            android:background="@drawable/pink_border"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="text" />

    </LinearLayout>
</layout>